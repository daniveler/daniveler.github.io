---
import CodeIcon from '../components/icons/Code.astro'
import JavascriptIcon from '../components/icons/Javascript.astro'
import ReactIcon from '../components/icons/Reactjs.astro'
import JavaIcon from '../components/icons/Java.astro'
import SpringbootIcon from '../components/icons/Springboot.astro'
import AndroidIcon from '../components/icons/Android.astro'
import KotlinIcon from '../components/icons/Kotlin.astro'
import VueIcon from '../components/icons/Vue.astro'

import { getLangFromUrl, useTranslations } from '../i18n/utils'
import SwaggerIcon from './icons/Swagger.astro'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const TAGS = {
  JAVASCRIPT: {
    name: 'Javascript',
    class: 'bg-yellow-400/70',
    icon: (JavascriptIcon)
  },
  REACTJS: {
    name: 'ReactJS',
    class: 'bg-blue-500/70',
    icon: (ReactIcon)
  },
  VUE: {
    name: 'VueJS',
    class: 'bg-cyan-500/70',
    icon: (VueIcon)
  },
  JAVA: {
    name: 'Java',
    class: 'bg-orange-500/70',
    icon: (JavaIcon)
  },
  SPRINGBOOT: {
    name: 'Springboot',
    class: 'bg-green-500/70',
    icon: (SpringbootIcon)
  },
  SWAGGER: {
    name: 'Swagger',
    class: 'bg-lime-500/70',
    icon: (SwaggerIcon)
  },
  ANDROID: {
    name: 'Android',
    class: 'bg-green-700/70',
    icon: (AndroidIcon)
  },
  KOTLIN: {
    name: 'Kotlin',
    class: 'bg-purple-600/70',
    icon: (KotlinIcon)
  },
}


const PROJECTS = [
  {
    title: `${t('projects.to-do.title')}`,
    description: `${t('projects.to-do.text')}`,
    link: 'https://github.com/daniveler/react-todo-app',
    image: 'https://github.com/daniveler/react-todo-app/raw/main/images/todo-app.png',
    tags: [TAGS.REACTJS, TAGS.JAVASCRIPT]
  },
  {
    title: `${t('projects.axpe-employees-api.title')}`,
    description: `${t('projects.axpe-employees-api.text')}`,
    link: 'https://github.com/daniveler/api-empleados-axpe',
    image: 'https://github.com/daniveler/api-empleados-axpe/raw/main/images/axpe-employees-api.png',
    tags: [TAGS.JAVA, TAGS.SPRINGBOOT, TAGS.SWAGGER]
  },
  {
    title: `${t('projects.moviefav.title')}`,
    description: `${t('projects.moviefav.text')}`,
    image: 'https://github.com/daniveler/MovieFav/raw/main/images/moviefav.png',
    link: 'https://github.com/daniveler/MovieFav',
    tags: [TAGS.ANDROID, TAGS.KOTLIN]
  },
  {
    title: `${t('projects.survy.title')}`,
    description: `${t('projects.survy.text')}`,
    link: 'https://github.com/daniveler/Survy',
    image: 'https://github.com/daniveler/Survy/raw/main/images/survy.png',
    tags: [TAGS.ANDROID, TAGS.KOTLIN]
  },
  {
    title: `${t('projects.weather-vue.title')}`,
    description: `${t('projects.weather-vue.text')}`,
    link: 'https://github.com/daniveler/weatherVue',
    image: 'https://github.com/daniveler/weatherVue/raw/master/images/weather-vue.png',
    tags: [TAGS.VUE, TAGS.JAVASCRIPT]
  },
]
---

<h2 class="text-2xl md:text-3xl font-semibold flex gap-x-3 items-center">
  <CodeIcon class="size-8"/>
  Projects
</h2>

{
  PROJECTS.map(({title, description, tags, link, image}) => (
    <article>
      
      <h1 class="text-2xl md:text-2xl mt-8 mb-4 font-semibold text-purple-400">
          {title}
      </h1>
      
      <p class="text-lg mb-4 text-pretty">{description}</p>

      { link && 
        <p class="text-lg mb-4 text-purple-400 hover:underline">
          <a href={link} target="_blank">
            "{title}" GitHub Repository
          </a>
        </p>
         }

      <a href={link} target="_blank"></a>

      <ul class="flex gap-x-4 flex-row">
        {
          tags.map((tag) => (
            <li>
              <span class={`flex items-center gap-x-2 rounded-full text-sm py-2 px-3 ${tag.class}`}>
                <tag.icon class="size-4" />
                <p class="font-medium md:text-base text-center">{tag.name}</p>
              </span>
            </li>
          ))
        }
      </ul>
      
      
      {/*
        <div class="flex items-center justify-center">
        <img 
        class="max-h-[400px] md:max-h-[500px] mt-8 mx-12 rounded shadow-lg shadow-white/20"
        src={image} 
        alt={`Project ${title} screenshot`}
      />
      </div>
       */}
      
    </article>
  ))
}
