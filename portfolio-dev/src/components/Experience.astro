const EXPERIENCE = [
  {
    date: 'September 2022 - Present',
    title: 'API Engineer in uXcale',
    description: '- Development of an introductory training program for APIs.\n- Design and specification of internal APIs for employee and activity management.\n- Documentation on numerous API concepts and various technologies, such as OpenAPI, Apigee, Mulesoft, gRPC, AsyncAPI, and GraphQL, among others.\n- Implementation of APIs using different environments such as SpringBoot, NodeJS or GraphQL.\n- Conducting tests and testing with Junit 5 and Mockito.\n- Utilization of API clients such as Postman, Advanced Rest Client, or Insomnia.',
  }, 
  {
    date: 'January 2022 - Present',
    title: 'API OB Integration Engineer in Telefónica',
