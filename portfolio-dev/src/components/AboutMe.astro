---
import ContactIcon from './icons/Contact.astro'
import AboutMeEN from './AboutMeEN.astro'
import AboutMeES from './AboutMeES.astro'
import { getLangFromUrl, useTranslations } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<h2 class="text-2xl md:text-3xl font-semibold mt-8 mb-6 flex gap-x-3 items-center">
  <ContactIcon class="size-8" />
  {t('about.title')}
</h2>

<section class="flex flex-col md:flex-row gap-x-4">
  <div class="[&>p]:mb-4 [&>p>strong]:text-purple-400">
    {
      lang === 'en' 
      ? <AboutMeEN />
      : <AboutMeES />
    }
  </div>
</section>
