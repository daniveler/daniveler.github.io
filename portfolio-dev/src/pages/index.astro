---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro'
import Home from '../components/Home.astro'
import Contact from '../components/Contact.astro';
import Experience from '../components/Experience.astro';
import Projects from '../components/Projects.astro';
---

<Layout 
	title="Daniel Velerdas Sedano - API Engineer and Full-Stack Developer"
	description='I am Daniel Velerdas Sedano, graduated in Computer Engineer with experience with API Engineering and Full-Stack Development'
	
>
	<main class="px-8">
		<SectionContainer id="home" class="py-12 md:py-44 pb-8 flex flex-col">
			<Home />
		</SectionContainer>

		<SectionContainer id="experience">
			<Experience />
		</SectionContainer>

		<SectionContainer id="projects">
			<Projects />
		</SectionContainer>

		<SectionContainer id="contact" class="flex flex-col justify-center gap-x-4 pb-8">
			<Contact />
		</SectionContainer>
		
	</main>
</Layout>


